package com.ssafy.ssafitlife.Calendar.Controller;

import java.util.List;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.ssafy.ssafitlife.Calendar.model.dto.Calendar;
import com.ssafy.ssafitlife.Calendar.model.service.CalendarService;

@RestController
@RequestMapping("calendar")
public class CalendarController {

	// 의존성 주입
	private final CalendarService calendarService;
	
	public CalendarController(CalendarService calendarService) {
		this.calendarService = calendarService;
	}
	
	@GetMapping("weight-data/{memNo}")
	public ResponseEntity<Object> listByMemNo(@PathVariable("memNo")int memNo){
		//memNo에 해당하는 Calendar 객체들 불러와서 list 에 저장
		List<Calendar> list = calendarService.getCalendarList(memNo);
		return ResponseEntity.status(HttpStatus.OK).body(list);
	}
	
	@PostMapping("weight-add/{memNo}")
	public ResponseEntity<Object> addWeight(@PathVariable("memNo")int memNo, @RequestBody Calendar calendar){
		calendar.setMemNo(memNo);
		
		if(postService.addWeight(calendar))
			return ResponseEntity.status(HttpStatus.CREATED).body("몸무게 정보 입력 완료");
		return ResponseEntity.status(HttpStatus.CREATED).body("몸무게 정보 입력 완료");
	}
	
	
	
	
	
	
	
}
